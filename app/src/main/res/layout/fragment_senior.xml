<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCF876"
    tools:context=".SeniorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foregroundGravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewSenior_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:fontFamily="sans-serif-medium"
            android:gravity="bottom|center_horizontal"
            android:text="Katowice  (32 E, 82 S)"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textViewSenior_temp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="140sp"
                android:textStyle="bold"
                tools:text="15" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:gravity="top"
                android:paddingBottom="40dp"
                android:text="&#xb0;C"
                android:textAllCaps="true"
                android:textColor="#040202"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageViewSenior"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="2"
                android:paddingRight="20dp"
                android:src="@drawable/a01d" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewSenior_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif-medium"
            android:gravity="bottom|center_horizontal"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewSenior_sunRise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.2"
            android:drawableLeft="@drawable/ic_baseline_wb_sunny_24"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:paddingTop="20dp"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewSenior_sunSet"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2.7"
            android:drawableLeft="@drawable/ic_baseline_nights_stay_24"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="210dp"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>